{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      },
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@repo/db/*": ["../../packages/db/src/*"],
      "@components/ui/*": ["./components/ui/*"],
      "@components/magicui/*": ["./components/magicui/*"],
      "@components/manualComponents/*": ["./components/manualComponents/*"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
